<%
  paginated_products = @searcher.retrieve_products if params.key?(:keywords)
  paginated_hotels ||= hotels
%>

<% content_for :head do %>
  <% if paginated_hotels.respond_to?(:num_pages) %>
    <%= rel_next_prev_link_tags paginated_hotels %>
  <% end %>
<% end %>

<div data-hook="products_search_results_heading">
  <% if hotels.empty? %>
    <div data-hook="products_search_results_heading_no_results_found">
      <%= Spree.t(:no_hotels_found) %>
    </div>
  <% end %>
</div>

<% if hotels.any? %>
<ul id="products" class="inline product-listing" data-hook>
  <% hotels[1..100].each do |hotel| %>
    <%# url = product_url(hotel, :taxon_id => @taxon.try(:id)) %>
    <li id="product_<%#= product.id %>" class="columns three <%= cycle("alpha", "secondary", "", "omega secondary", :name => "classes") %>" data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
      <%# cache(@taxon.present? ? [I18n.locale, current_currency, @taxon, product] : [I18n.locale, current_currency, product]) do %>
        <div class="product-image">
          <%= image_tag show_image(hotel['thumbNailUrl']), :itemprop => "image" %>
        </div>
        <%=  link_to hotel['name'], "/hotels/#{hotel['hotelId']}", :class => 'info', :itemprop => "name", :title => hotel['name'] %>
        <%= hotel['countryCode'] %>
        <span class="price selling" itemprop="price"><%#= display_price(hotel) %></span>
      <%# end %>
    </li>
  <% end %>
  <% reset_cycle("classes") %>
</ul>
<% end %>

<% if paginated_hotels.respond_to?(:num_pages) %>
  <%= paginate paginated_hotels %>
<% end %>
