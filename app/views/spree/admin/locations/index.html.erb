<h1>Listing locations</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Location name</th>
      <th>Phone number</th>
      <th>Distric</th>
      <th>City</th>
      <th>Postcode</th>
      <th>Country</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Reference</th>
      <th>Enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.address %></td>
        <td><%= location.location_name %></td>
        <td><%= location.phone_number %></td>
        <td><%= location.distric %></td>
        <td><%= location.city %></td>
        <td><%= location.postcode %></td>
        <td><%= location.country %></td>
        <td><%= location.lat %></td>
        <td><%= location.lng %></td>
        <td><%= location.reference %></td>
        <td><%= location.enabled %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', '/admin/locations/new' %>
